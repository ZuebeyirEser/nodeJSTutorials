// OS Module
//this is built-in module using . will provide all its functions
const os = require('os');
// os.

// info about current user
const user = os.userInfo();
console.log(user);

// uptime of the system(how long computer is running) in seconds
console.log(`System uptime is: ${os.uptime()/86400}  days`);

const currentOS = {
    name:os.type(),
    release:os.release(),
    totalMem:os.totalmem(),
    freeMem:os.freemem(),
}
console.log(currentOS);